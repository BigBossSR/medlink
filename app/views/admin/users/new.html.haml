%h1 Add Users

%h2 Bulk Upload
.row
  .col-md-offset-1
    = render partial: 'uploadcsv'

%h2 Individually
.row
  .col-md-offset-1
    = render partial: 'form', locals: {user: @user, action: :add}

%h1 Edit Account
.row
  .col-md-offset-1
    = form_tag admin_users_path, class: 'form-search' do
      = select_tag :edit_user, grouped_options_for_select(@users), prompt: 'Select Volunteer to edit', class: 'input-sm', style: 'border-color:lightGray'
      %br
      %button.btn.btn-primary(type="submit") Edit

