%thead
  %tr
    %th PCVID
    %th First Name
    %th Last Name
    %th Requests
    - if responded
      %th Response
      %th Delivery Method
      %th Response Instructions
%tbody
  - orders.group_by(&:user).each do |user, os|
    - attrs = { "class" => "order c#{user.country_id}" }
    - unless responded
      - attrs["class"] += " link"
      /- attrs["data-link"] = new_order_response_path(order)
    %tr{ attrs }
      %td= user.pcv_id
      %td= user.first_name
      %td= user.last_name
      %td
        - os.group_by { |o| o.created_at.to_i }.each do |_, _os|
          %dl
            %dt
              %span= _os.first.created_at.in_time_zone(user.time_zone).strftime '%-m/%-d/%y'
              %small.cell--secondary= _os.first.created_at.in_time_zone(user.time_zone).strftime '%H:%M'
            %dd= _os.map { |o| o.supply.name }.join ', '
