%h1 Request Manager

- if current_user.admin?
  = render partial: "partials/admin_country_select"
  %hr

- if active_country?
  .order-table#past-due-requests
    %br
    %h3 Past Due Requests
    %table#past-due-orders.table.table-bordered.table-hover
      = render partial: 'request_table', locals: { orders: @orders.past_due }

  .order-table#pending-requests
    %br
    %h3 Pending Requests
    %table#pending-orders.table.table-bordered.table-hover
      = render partial: 'request_table', locals: { orders: @orders.pending }

  .order-table#response-tracker
    %br
    %h3 Response Tracker
    %table#responded-orders.table.table-bordered.table-hover
      = render partial: 'response_table', locals: { responses: @responses }

:javascript
  $("tr[data-link]").click -> window.location = $(this).data "link"
