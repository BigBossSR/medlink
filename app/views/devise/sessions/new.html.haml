= content_for :page_title do
  Sign In

= form_for resource, html: {class: 'form form-horizontal'}, as: resource_name, url: session_path(resource_name) do |f|
  .row
    .col-md-6
      - inputs f do |i|
        %fieldset
          = i.email_field :email, autofocus: true
          = i.password_field :password
          .form-group
            = f.check_box :remember_me
            = f.label :remember_me
        %button.btn.btn-primary(type="submit") Sign In
        = link_to 'Forgot Password', new_user_password_path, class: 'btn btn-default'
