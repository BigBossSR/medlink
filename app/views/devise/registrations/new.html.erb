<div class="l-wrapper">
  <%= render "partials/sidebar" %>

  <div class="l-main">

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-devise'}) do |f| %>
    <h2>Sign up</h2>
    
    <%= devise_error_messages! %>

    <div class="form__section">
      <div class="input-group">
        <%= f.email_field :email, :autofocus => true, :type => 'text', :placeholder => 'Email' %>
      </div>
    </div>

    <div class="form__section">
      <div class="input-group">
        <%= f.password_field :password, :placeholder => 'Password' %>
      </div>
    </div>

    <div class="form__section">
      <div class="input-group">
        <%= f.password_field :password_confirmation, :placeholder => 'Confirm Password' %>
      </div>
    </div>

    <div class="form__section">
      <div class="input-group">
        <div class="select select--full">
          <%= f.select(:country_id, ["Country", ""] + Country.all.map { |c| [c.name.titleize, c.id] }) %>
          <i class="icon-caret-down select__arrow"></i>
        </div>
      </div>
    </div>

    <div class="btn-group">
      <%= f.submit "Sign up", :class => 'btn btn--primary' %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>

</div>